// pages/api/pvgis.ts
export default async function handler(req: any, res: any) {
  const { lat, lon, peakpower, angle, aspect } = req.query;
  const url = `https://re.jrc.ec.europa.eu/api/v5_2/PVcalc?lat=${lat}&lon=${lon}&peakpower=${peakpower}&loss=0&angle=${angle}&aspect=${aspect}&raddatabase=PVGIS-SARAH3&pvtechchoice=crystSi&outputformat=json`;
  try {
    const response = await fetch(url);
    const data = await response.json();
    res.status(200).json(data);
  } catch (error) {
    res.status(500).json({ error: "Erreur PVGIS" });
  }
}
